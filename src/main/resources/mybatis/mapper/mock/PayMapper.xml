<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.snowwolf.dtotool.mapper.mock.PayMapper" >
    <resultMap id="BaseResultMap" type="com.snowwolf.dtotool.mode.PayVo" >
        <result column="trade_id" property="tradeId" jdbcType="VARCHAR" />
        <result column="pay_id" property="payId" jdbcType="VARCHAR" />
        <result column="state" property="state" jdbcType="VARCHAR"/>
        <result column="money" property="money" jdbcType="BIGINT" />
    </resultMap>
    
    <sql id="Base_Column_List" >
        trade_id, pay_id, state, money
    </sql>

    <select id="getAll" resultMap="BaseResultMap"  >
       SELECT 
       <include refid="Base_Column_List" />
	   FROM tb_pay
    </select>

    <select id="getOne" parameterType="java.lang.String" resultMap="BaseResultMap" >
        SELECT 
       <include refid="Base_Column_List" />
	   FROM tb_pay
	   WHERE pay_id = #{payId}
    </select>
</mapper>